# Server Configuration
PORT=8080
NODE_ENV=development

# Database
DATABASE_URL=./data/datestack.db

# Authentication
SECRET_KEY=change-this-to-a-random-32-character-string
JWT_EXPIRES_IN=7d

# CORS (comma-separated origins, or * for all)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Timezone (used for server-side "today" in headless operations like rollover-all)
TIMEZONE=America/Los_Angeles

# System API Key (for system-level operations like rollover-all)
SYSTEM_API_KEY=
